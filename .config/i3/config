set $mod Mod1

# Font for window titles (also used by the bar unless overridden in the bar block)
font pango:monospace 15px

# Window borders and focus settings
for_window [class="^.*"] border pixel 2
for_window [class="^.*"] client.focused #77dd77 #285577 #ffffff #2e9ef4   #285577

# Floating window modifier
floating_modifier $mod

# Keybindings for launching terminal and killing windows
bindsym $mod+Return exec i3-sensible-terminal
bindsym $mod+Shift+q kill

# Program launcher (dmenu)
bindsym $mod+d exec --no-startup-id i3-dmenu-desktop

#setup flameshot for screenshot
bindsym Print exec flameshot gui


# Set up second monitor and rotate
exec --no-startup-id xrandr --output HDMI-2-1 --auto --rotate left --left-of DP-0 
# PulseAudio volume controls
bindsym $mod+Shift+Up exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym $mod+Shift+Down exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym $mod+Shift+M exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle

# Navigation: Change focus using arrows or hjkl
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Move windows: hjkl or arrow keys
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
#bindsym $mod+Shift+Left move left
#bindsym $mod+Shift+Down move down
#bindsym $mod+Shift+Up move up
#bindsym $mod+Shift+Right move right

# Window split orientation
bindsym $mod+z split h
bindsym $mod+v split v

# Fullscreen toggle
bindsym $mod+f fullscreen toggle

# Change container layout
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Toggle floating mode
bindsym $mod+Shift+space floating toggle

# Focus parent container
bindsym $mod+a focus parent

# Assign workspace 10 to HDMI-2-1
workspace 10 output HDMI-2-1

# Workspace switching (1-10)
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
